def oddOrEven(a):
   if a % 2 == 0:
      return True
   else:
      return False
   
nummer = [1,3,2,-7,8]

summa = []

summa_jämn = 0
summa_ojämn = 0

for siffra in nummer:
    if oddOrEven(siffra):
        summa_jämn += siffra
    else:
        summa_ojämn += siffra



print(summa_jämn, summa_ojämn)
